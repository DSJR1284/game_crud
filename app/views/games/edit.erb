<h1>Level Up Your Game With New Content</h1>
 <br><br>
 <form action="/games/<%= @games.id %>" method="post">
 <input type="hidden" name="_method" value="patch">
    <label for="title">Title:</label>
    <input type="text" name="title" value ="<%= @games.title %>">
    <br><br><br>
    <label for="game_image">Game Cover:</label>
    <input type="text" name="game_image" value="<%= @games.game_image %>">
    <br><br><br>
    <label for="blurb">Blurb:</label>
    <textarea name="blurb"><%= @games.blurb %></textarea>
    <br><br><br>
    <label for="genre">Genre:</label>
    <input type="text" name="genre" value ="<%= @games.genre %>">
    <br><br><br>
    <input type="submit" value="Rerelease Your Game">
 </form>
<br>

<form method="post" action="/games/<%= @games.id %>/delete" >
 <input type="hidden" id="hidden" name="_method" value="DELETE">
 <input type="submit" value="Delete Game">
</form>
<br>


